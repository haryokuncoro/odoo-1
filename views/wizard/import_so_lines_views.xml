<odoo>
  <record id="view_import_so_lines_wizard_form" model="ir.ui.view">
    <field name="name">import.so.lines.wizard.form</field>
    <field name="model">import.so.lines.wizard</field>
    <field name="arch" type="xml">
      <form string="Import SO Lines">
        <group>
          <field name="file" filename="filename"/>
        </group>
        <footer>
          <button name="action_import"
                  string="Import"
                  type="object"
                  class="btn-primary"/>
          <button string="Cancel"
                  special="cancel"
                  class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
